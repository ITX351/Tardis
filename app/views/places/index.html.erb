<h1> Places information </h1>

<div align = "center" >
<% @places.each do |place| %>
<h3><%= link_to place.name, place %></h3>
<p>
    <tr>
        <td>Category: <%= place.category %></td>
        <td>Pos: <%= place.locationx %>,<%= place.locationy%></td>
        <td>Introduction: <%= place.intro %></td>
    </tr>
</p>
    <br/>
<h4>Comments</h4>
<p>
    <% place.comments.each do |comment| %>
        <%= comment.content%>
        <br/>
    <% end %>
</p>
    
<hr/>

<% end %>

</div>