			<% @places.each do |place| %>
			<div class="col-md-4">
				<section>
					<a href="#" class="image full"><%= image_tag(place.avatar_url(:big)) if place.avatar %></a>
						<div class="content">
							  <div class = "cont_one">
							  		<h3><%= link_to place.name, place %></h3>
							  </div>
							  <%= ratings_for place, :static %>
							  <div class = "cont_two">
							    	<%= place.intro %>
							  </div>
							  <div class="button">
							   
							      		<%= link_to " Read More", place, :method => :get%>
							   
							  </div>
						</div>
					<a href="" class="button">Read More</a>
				</section>
			</div>
			<% end %>
		</div>
		<div class = "col-md-3">
			Test
		</div>

		<div class="divider">&nbsp;</div>
	
	</div>
</div> <!-- end of main -->

