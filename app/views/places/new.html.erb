<br/><br/><br/>

<%= form_for(@place) do |f| %>
    <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
    </div>
    <div class="field">
        <%= f.label :location %><br />
        <div class = "col-md-6">
            <%= f.text_field :locationx, placeholder: "location-x" %>
        </div>
        <div class = "col-md-6">
            <%= f.text_field :locationy, placeholder: "location-y" %>
        </div>
    </div>
    <div class="field">
        <%= f.label :intro %><br />
        <%= f.text_area :intro, rows: 8, placeholder: "Input some brief descriptions..." %>
    </div>
    <div class = "field">
        <%= f.file_field :avatar %>
        <%= f.hidden_field :avatar_cache %>
    </div>
    <div class="actions ">
      <%= f.submit "New Place", class: "actions special"%>
    </div>
<% end %>