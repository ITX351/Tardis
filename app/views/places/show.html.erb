<h2><%= @place.name %></h2>
<p>
        <b>Category:</b><%= @place.category %><br/>
        <b>Pos:</b> (<%= @place.locationx %>,<%= @place.locationy%>)<br/>
        <b>Introduction:</b> <%= @place.intro %><br/>
</p>
<p>
<%= link_to "Back", places_path %>
|
<%= link_to "Edit", edit_place_path(@place) %>
|
<%= link_to "Delete", @place, :method => :delete, :confirm => "Are you sure?" %>
</p>

<hr/>

<h3>Comments</h3>
<p>
<% @place.comments.each do |comment| %>
	<%= comment.content %>
	<br/>
	By <%= find_user(comment.user_id).name %>
	------<%= time_ago_in_words comment.created_at %> ago
	<br/>
<% end %>
</p>

<p>
<%= form_for [@place, @place.comments.build] do |f| %>
<%= f.text_area :content %>
<br/>
<%= f.submit "Post Comment" %>
<% end %>
</p>



