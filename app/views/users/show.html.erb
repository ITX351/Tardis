<div style="position:fixed; left:0; top:0; width:100%; height:100%; z-index:-5000">
  <%= image_tag("bg1.jpg", width: "100%", height: "100%") %>
</div>
<%= stylesheet_link_tag    "style1.css", :media => "all" %>

<h2> Personal Information </h2>

<%= gravatar_image_tag(@user.email, :alt => @user.name, :gravatar => { :size => 80 }) %>
<!-- :size => 80 for default, varifies from 15 to 512 -->

<div id="container1">   

  <table class="zebra">
    <caption>Personal Information</caption>
    <thead>
          <tr>
        <th>Name</th>
        <th>Email</th>
        </tr>
    </thead>
        <tbody>
          <tr>
              <td><%= @user.name %></td>
              <td> <%= @user.email %></td>
            </tr>
        </tbody>
  </table>

      <table class="zebra">
    <caption>Content</caption>
    <thead>
          <tr>
        <th>Content</th>
        <th>Time</th>
            </tr>
    </thead>
        <tbody>
          
              <% @user.comments.each do |comment| %>
                <tr>
                <td><%= comment.content%></td>
                <td><%= time_ago_in_words comment.created_at %> ago</td>
                <hr/>
              </tr>
              <% end %>
        </tbody>
  </table>
</div>
<p>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Home', home_path %>
</p>