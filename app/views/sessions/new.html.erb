<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<%= form_for(:session, url: signin_path) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit "Sign in" %><br />
    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
<% end %>
