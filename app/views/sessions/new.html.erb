<% provide(:title, "Sign in") %>
<div style="position:fixed; left:0; top:0; width:100%; height:100%; z-index:-5000">
	<%= image_tag("bg1.jpg", width: "100%", height: "100%") %>
</div>
<%= stylesheet_link_tag    "main.css", :media => "all" %>

<h1>Sign in</h1>
<div align = "center">
	<%= form_for(:session, url: signin_path) do |f| %>
		<div class="field" style = "width: 30%">
			<%= f.label :name %>
			<%= f.text_field :name%>
		</div>
		<div class="field" style = "width: 30%">
			<%= f.label :password %><br />
			<%= f.password_field :password %>
		</div>
		<br/> 
		<div class="actions">
			<%= f.submit "Sign in" , class: "special"%><br /><br />
			<p>New user? <%= link_to "Sign up now!", signup_path %></p>
		</div>
	<% end %>
</div>